<h1 class="mb-3">{{ article.titre }}</h1>
<p class="text-muted">Publi√© le {{ article.date_creation }}</p>

<div class="mb-4">
    {{ article.contenu | raw }}
</div>

<h2 class="mt-5">Commentaires</h2>
<ul class="list-group mb-4">
{% for comment in commentaires %}
    <li class="list-group-item">
        <strong>{{ comment.nom_auteur }}</strong> 
        <small class="text-muted">({{ comment.date_commentaire }})</small>
        <p>{{ comment.contenu }}</p>
    </li>
{% else %}
    <li class="list-group-item">Aucun commentaire pour cet article.</li>
{% endfor %}
</ul>

<h2 class="mt-5">Ajouter un commentaire</h2>
<form method="POST" action="" class="mb-5">
    <input type="hidden" name="action" value="add_comment">
    <input type="hidden" name="article_id" value="{{ article.id }}">

    <div class="mb-3">
        <label for="nom_auteur" class="form-label">Nom *</label>
        <input type="text" class="form-control" id="nom_auteur" name="nom_auteur" required>
    </div>

    <div class="mb-3">
        <label for="email_auteur" class="form-label">Email (facultatif)</label>
        <input type="email" class="form-control" id="email_auteur" name="email_auteur">
    </div>

    <div class="mb-3">
        <label for="contenu" class="form-label">Commentaire *</label>
        <textarea class="form-control" id="contenu" name="contenu" rows="5" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Envoyer</button>
</form>
