{% extends "nav.twig" %}

        {% block content %}
<h1 class="mb-4">Derniers Articles</h1>

<div class="row">
{% for article in articles %}
<div class="col-md-6 mb-4">
    <div class="card h-100 shadow-sm">

        {% if article.image_une %}
        <div style="height: 200px; overflow: hidden;">
            <img src="uploads/{{ article.image_une }}" class="card-img-top" alt="{{ article.titre }}" style="object-fit: cover; height: 100%; width: 100%;">
        </div>
        {% else %}
        <div class="bg-light text-center py-5 text-muted" style="height: 200px;">
            <i class="bi bi-image" style="font-size: 3rem;"></i>
        </div>
        {% endif %}

        <div class="card-body">
            <h2 class="h4 card-title">
                <a href="index.php?slug={{ article.slug }}" class="text-decoration-none text-dark">
                    {{ article.titre }}
                </a>
            </h2>
            <h6 class="card-subtitle mb-2 text-muted">
                <small>Publié le {{ article.date_creation|date("d/m/Y") }} par {{ article.nom_utilisateur }}</small>
            </h6>
            <p class="card-text">
                {{ article.contenu|striptags|slice(0, 150) }}...
            </p>
        </div>
        <div class="card-footer bg-transparent border-top-0">
            <a href="index.php?slug={{ article.slug }}" class="btn btn-primary btn-sm">Lire la suite</a>
        </div>
    </div>
</div>
{% else %}
<div class="col-12">
    <div class="alert alert-info">Aucun article publié pour le moment.</div>
</div>
{% endfor %}
</div>
        {% endblock %}