{% extends "nav.twig" %}

        {% block content %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Modifier les rôles</h3>
                </div>
                <div class="card-body">
                    <h5 class="mb-3">Utilisateur : <strong>{{ user.nom_utilisateur }}</strong></h5>

                    <form method="POST" action="index.php?admin=edit_user&id={{ user.id }}">
                        <div class="mb-4">
                            <label class="form-label fw-bold">Cochez les rôles à attribuer :</label>
                            <div class="card p-3 bg-light border-0">
                                {% for role in all_roles %}
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox"
                                           name="roles[]"
                                           value="{{ role.id }}"
                                           id="role_{{ role.id }}"
                                    {% if role.id in user_roles %}checked{% endif %}>
                                    <label class="form-check-label" for="role_{{ role.id }}">
                                        {{ role.nom_role }}
                                    </label>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="index.php?admin=users" class="btn btn-secondary">Annuler</a>
                            <button type="submit" class="btn btn-success">Enregistrer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
        {% endblock %}